@model IEnumerable<EmployeeManagementSystem.Models.Employee>


@{
    ViewData["Title"] = "Index";
}

<h1 class="title">Employee Table</h1>
<script src="/js/Alert.js"></script>
<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />

<p>
    <a asp-action="Create"class="create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateofBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateofBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departments.Name)
            </td>
            <td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="edit">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id" class="det">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="del">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>